<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IllumiSmart" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="Theme.IllumiSmart.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/launcher_background</item>
    </style>
    <style name="Theme.IllumiSmart.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/app_green</item>
        <item name="colorPrimaryVariant">@color/data</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>
    <style name="Theme.IllumiSmart.LightLevel" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_level</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.IllumiSmart.Flicker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/flicker</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.IllumiSmart.Glare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/glare</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.IllumiSmart.SelfAssessment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/self_assessment</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.IllumiSmart.Occupation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/occupation_age_btn</item>
        <item name="colorPrimaryVariant">@color/home_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.IllumiSmart.Age" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/occupation_age_btn</item>
        <item name="colorPrimaryVariant">@color/age</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.IllumiSmart.Question" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_green</item>
        <item name="colorPrimaryVariant">@color/question_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/question_text</item>
    </style>

</resources>