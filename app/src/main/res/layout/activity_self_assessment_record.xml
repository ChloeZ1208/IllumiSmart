            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text=">"
            android:textColor="@color/stroke"
            android:textSize="18sp" />

