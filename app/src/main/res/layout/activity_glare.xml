<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GlareActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/glare_cv_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="landscape"
        opencv:camera_id="any"
        opencv:show_fps="true" />

    <RelativeLayout
        android:id="@+id/glare_text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal">

        <TextView
            android:id="@+id/glare_text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="111dp"
            android:layout_marginTop="692dp"
            android:layout_marginEnd="112dp"
            android:text="Glare event: False"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/glare_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|left">

        <Button
            android:id="@+id/glare_button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>